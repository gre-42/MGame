[
  {
    "declare_macro": "traffic.create_avatar_npc_player",
    "content": [
      {
        "call": "spawner_create",
        "arguments": {
          "name": "%spawner_name",
          "team": "red"
        }
      },
      {
        "call": "player_create",
        "arguments": {
          "name": "%spawner_name",
          "team": "red",
          "game_mode": "bystander",
          "unstuck_mode": "%unstuck_mode",
          "behavior": "pedestrian",
          "driving_direction": "right"
        }
      },
      {
        "call": "set_can_drive",
        "arguments": {
          "player": "%spawner_name",
          "source": "ai",
          "value": true
        }
      },
      { "call": "spawner_set_player", "arguments": { "name": "%spawner_name", "role": "driver" } }
    ]
  },
  {
    "declare_macro": "traffic.create_car_npc_player",
    "content": [
      {
        "call": "spawner_create",
        "arguments": {
          "name": "%spawner_name",
          "team": "red"
        }
      },
      {
        "call": "player_create",
        "arguments": {
          "name": "%spawner_name",
          "team": "red",
          "game_mode": "bystander",
          "unstuck_mode": "%unstuck_mode",
          "behavior": "%initial_behavior",
          "driving_direction": "right"
        }
      },
      { "call": "spawner_set_player", "arguments": { "name": "%spawner_name", "role": "driver" } },
      {
        "call": "set_can_drive",
        "arguments": {
          "player": "%spawner_name",
          "source": "ai",
          "value": true
        }
      }
    ]
  },
  {
    "declare_macro": "traffic.create_avatar",
    "content": [
      {
        "playback": "create_avatar",
        "let": {
          "IF_WITH_GUN": false,
          "IF_SHADOW": false,
          "if_human_style": true,
          "if_spawner": true,
          "IF_PLAYER": true,
          "velocity_error_std": 0.3,
          "yaw_error_std": 0.02,
          "pitch_error_std": 0.02,
          "error_alpha": 0.002
        }
      },
      {
        "call": "create_externals",
        "arguments": {
          "player": "%spawner_name",
          "mode": "npc"
        }
      },
      {
        "call": "create_internals",
        "arguments": {
          "player": "%spawner_name",
          "role": "%role"
        }
      }
    ]
  },
  {
    "declare_macro": "traffic.create_car",
    "content": [
      {
        "playback": "create_car",
        "let": {
          "IF_PLAYBACK_TRACK": false,
          "IF_PLAYBACK_WINNER": false,
          "if_spawner": true,
          "IF_PLAYER": true,
          "IF_SHADOW": false,
          "IF_DAMAGEABLE": false,
          "if_car_body_renderable_style": true,
          "velocity_error_std": null,
          "yaw_error_std": null,
          "pitch_error_std": null,
          "error_alpha": null
        }
      },
      {
        "call": "create_externals",
        "arguments": {
          "player": "%spawner_name",
          "mode": "npc"
        }
      },
      {
        "call": "create_internals",
        "arguments": {
          "player": "%spawner_name",
          "role": "%role"
        }
      }
    ]
  },
  {
    "declare_macro": "traffic.create_npc_and_human",
    "content": [
      {
        "playback": "traffic.create_avatar_npc_player",
        "arguments": {
          "unstuck_mode": "delete"
        }
      },
      {
        "call": "set_preferred_car_spawner",
        "arguments": {
          "spawner": "%spawner_name",
          "macro": {
            "playback": "traffic.create_avatar",
            "let": {
              "respawn_cooldown_time": 0
            }
          }
        }
      }
    ]
  },
  {
    "declare_macro": "traffic.create_npc_and_parking_car",
    "content": [
      {
        "playback": "traffic.create_car_npc_player",
        "arguments": {
          "unstuck_mode": "off",
          "initial_behavior": "none"
        }
      },
      {
        "call": "set_preferred_car_spawner",
        "arguments": {
          "spawner": "%spawner_name",
          "macro": {
            "playback": "traffic.create_car",
            "let": {
              "hand_brake_pulled": true,
              "mute": true,
              "respawn_cooldown_time": 0
            }
          }
        }
      }
    ]
  },
  {
    "declare_macro": "traffic.create_npc_and_driving_car",
    "content": [
      {
        "playback": "traffic.create_car_npc_player",
        "arguments": {
          "unstuck_mode": "delete",
          "initial_behavior": "city"
        }
      },
      {
        "call": "set_preferred_car_spawner",
        "arguments": {
          "spawner": "%spawner_name",
          "macro": {
            "playback": "traffic.create_car",
            "let": {
              "hand_brake_pulled": false,
              "mute": false,
              "respawn_cooldown_time": 0
            }
          }
        }
      }
    ]
  },
  { "include": "traffic_with_pedestrians.scn.json" },
  { "include": "traffic_wo_pedestrians.scn.json" }
]
