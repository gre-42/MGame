{
  "declare_macro": "create_car_cameras_sedan",
  "content": [
    {"call": "root_node_instance", "arguments": {"dynamics": "moving", "name": "c45_deg_camera_$user_name", "position": [0, 2000, 2400], "rotation": [-45, 0, 0]}},
    {"call": "child_node_instance", "arguments": {"type": "dynamic", "parent": "car_node$suffix", "name": "follower_camera_$user_name", "position": [0, 10, 10]}},
    {"call": "child_node_instance", "arguments": {"type": "dynamic", "parent": "car_node$suffix", "name": "cockpit_camera_$user_name", "position": "%cockpit_camera_position"}},
    {"comment": {"call": "child_renderable_instance", "arguments": {"name": "gizmo", "node": "cockpit_camera_$user_name", "resource": "gizmo"}}},
    {"call": "perspective_camera", "arguments": {"node": "c45_deg_camera_$user_name", "y_fov": 30, "near_plane": 1, "far_plane": 10000, "requires_postprocessing": false}},
    {"call": "perspective_camera", "arguments": {"node": "follower_camera_$user_name", "y_fov": 60, "near_plane": 1, "far_plane": "%far_plane", "requires_postprocessing": true}},
    {"call": "perspective_camera", "arguments": {"node": "cockpit_camera_$user_name", "y_fov": 90, "near_plane": 0.1, "far_plane": "%far_plane", "requires_postprocessing": true}},
    {"call": "look_at_node", "arguments": {"follower": "c45_deg_camera_$user_name", "followed": "car_node$suffix"}},
    {
      "call": "follow_node",
      "arguments": {
        "follower": "follower_camera_$user_name",
        "followed": "car_node$suffix",
        "distance": 5.2,
        "node_displacement": [0, 1, 0],
        "look_at_displacement": [0, 1, 0],
        "snappiness": 2,
        "y_adaptivity": 15,
        "y_snappiness": 0.05
      }
    },
    {
      "context": "primary_scene_$user_name",
      "execute": [
        {"call": "set_camera_cycle", "arguments": {"name": "far", "cameras": ["c45_deg_camera_$user_name", "light_node0", "light_node1", "dirtmap_node", "bird_node"]}},
        {"call": "set_camera_cycle", "arguments": {"name": "near", "cameras": ["follower_camera_$user_name", "cockpit_camera_$user_name"]}},
        {"call": "set_camera", "arguments": {"name": "follower_camera_$user_name"}}
      ]
    },
    {"call": "append_externals_deleter", "arguments": {"player": "%externals_player_name", "node": "c45_deg_camera_$user_name"}},
    {"call": "append_externals_deleter", "arguments": {"player": "%externals_player_name", "node": "follower_camera_$user_name"}},
    {"call": "append_externals_deleter", "arguments": {"player": "%externals_player_name", "node": "cockpit_camera_$user_name"}},
    {"call": "set_node_hider", "arguments": {"node_to_hide": "car_node$suffix", "camera_node": "cockpit_camera_$user_name"}}
  ]
}
