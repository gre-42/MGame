[
  {
    "declare_macro": "scene_minimal",
    "content": [
      {
        "call": "root_node_instance",
        "arguments": {
          "dynamics": "moving",
          "name": "follower_camera",
          "position": [0, 0, 0],
          "rotation": [0, 0, 0],
          "scale": 1
        }
      },
      {
        "call": "perspective_camera",
        "arguments": {
          "node": "follower_camera",
          "y_fov": 30,
          "near_plane": 1,
          "far_plane": 10000,
          "requires_postprocessing": false
        }
      },
      {
        "comment": "# ortho_camera node=follower_camera near_plane=1 far_plane=10000 left_plane=-10 right_plane=10 bottom_plane=-10 top_plane=10 requires_postprocessing=0;"
      },
      {
        "call": "root_node_instance",
        "required": ["%if_dirtmap"],
        "arguments": {
          "dynamics": "moving",
          "name": "dirtmap_node",
          "position": [0, 1000, 0],
          "rotation": [-90, 0, 0],
          "scale": 1
        }
      },
      {
        "call": "ortho_camera",
        "required": ["%if_dirtmap"],
        "arguments": {
          "node": "dirtmap_node",
          "near_plane": 1,
          "far_plane": 10000,
          "left_plane": -2000,
          "right_plane": 2000,
          "bottom_plane": -1000,
          "top_plane": 1000,
          "requires_postprocessing": false
        }
      },
      {
        "call": "set_dirtmap",
        "required": ["%if_dirtmap"],
        "arguments": {
          "offset": 0,
          "discreteness": 4,
          "scale": 1,
          "wrap_mode": "clamp_to_edge",
          "filename": "textures/dirtmap.png"
        }
      },
      {
        "call": "add_color_style",
        "arguments": {
          "reflection_maps": {
            "car": "reflection_map"
          }
        }
      },
      {
        "call": "set_skybox",
        "required": ["%if_skybox"],
        "arguments": {
          "alias": "skybox"
        }
      },
      {
        "call": "set_background_color",
        "arguments": { "color": [0.6, 0.6, 0.6] }
      }
    ]
  }
]
