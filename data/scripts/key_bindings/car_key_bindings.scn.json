{
  "declare_macro": "create_car_key_bindings",
  "content": [
    {
      "required": ["%if_manual_drive"],
      "call": "car_controller_idle_binding",
      "arguments": {
        "player": "%externals_player_name",
        "node": "car_node$suffix"
      }
    },
    {
      "required": ["%if_manual_drive"],
      "call": "car_controller_key_binding",
      "arguments": {
        "id": "car_or_heli.steer_left",
        "role": "%externals_role",
        "player": "%externals_player_name",
        "node": "car_node$suffix",
        "steer_left_amount": 1
      }
    },
    {
      "required": ["%if_manual_drive"],
      "call": "car_controller_key_binding",
      "arguments": {
        "id": "car_or_heli.steer_right",
        "role": "%externals_role",
        "player": "%externals_player_name",
        "node": "car_node$suffix",
        "steer_left_amount": -1
      }
    },
    {
      "comment": {
        "call": "abs_key_binding",
        "arguments": {
          "node": "car_node$suffix",
          "key": "%LEFT_SHIFT",
          "gamepad_button": "B",
          "force": [0, 20000, 0]
        }
      }
    },
    {
      "required": ["%if_manual_drive"],
      "call": "car_controller_key_binding",
      "arguments": {
        "id": "car_or_heli.forward",
        "role": "%externals_role",
        "player": "%externals_player_name",
        "node": "car_node$suffix",
        "surface_power": "inf"
      }
    },
    {
      "required": ["%if_manual_drive"],
      "call": "car_controller_key_binding",
      "arguments": {
        "id": "car_or_heli.backwards",
        "role": "%externals_role",
        "player": "%externals_player_name",
        "node": "car_node$suffix",
        "surface_power": "-inf"
      }
    },
    {
      "required": ["%if_manual_drive"],
      "call": "car_controller_key_binding",
      "arguments": {
        "id": "car_or_heli.ascend",
        "role": "%externals_role",
        "player": "%externals_player_name",
        "node": "car_node$suffix",
        "ascend_velocity": 10
      }
    },
    {
      "required": ["%if_manual_drive"],
      "call": "car_controller_key_binding",
      "arguments": {
        "id": "car_or_heli.descend",
        "role": "%externals_role",
        "player": "%externals_player_name",
        "node": "car_node$suffix",
        "ascend_velocity": -10
      }
    },
    {
      "required": ["%if_has_gun"],
      "call": "rel_key_binding",
      "arguments": {
        "id": "car_or_heli.rotate_gun_left",
        "role": "%externals_role",
        "player": "%externals_player_name",
        "node": "turret_node$suffix",
        "rotation_axis": [0, 1, 0],
        "angular_velocity_press": 0.1,
        "angular_velocity_repeat": 1,
        "speed_cursor": 0.05
      }
    },
    {
      "required": ["%if_has_gun"],
      "call": "rel_key_binding",
      "arguments": {
        "id": "car_or_heli.rotate_gun_right",
        "role": "%externals_role",
        "player": "%externals_player_name",
        "node": "turret_node$suffix",
        "rotation_axis": [0, 1, 0],
        "angular_velocity_press": -0.1,
        "angular_velocity_repeat": -1,
        "speed_cursor": -0.05
      }
    },
    {
      "required": ["%if_has_gun"],
      "call": "rel_key_binding",
      "arguments": {
        "id": "car_or_heli.rotate_gun_up",
        "role": "%externals_role",
        "player": "%externals_player_name",
        "node": "turret_node$suffix",
        "rotation_axis": [1, 0, 0],
        "angular_velocity_press": 0.1,
        "angular_velocity_repeat": 1,
        "speed_cursor": 0.05
      }
    },
    {
      "required": ["%if_has_gun"],
      "call": "rel_key_binding",
      "arguments": {
        "id": "car_or_heli.rotate_gun_down",
        "role": "%externals_role",
        "player": "%externals_player_name",
        "node": "turret_node$suffix",
        "rotation_axis": [1, 0, 0],
        "angular_velocity_press": -0.1,
        "angular_velocity_repeat": -1,
        "speed_cursor": -0.05
      }
    },
    {
      "required": ["%if_has_gun"],
      "call": "gun_key_binding",
      "arguments": {
        "id": "car_or_heli.shoot",
        "role": "%externals_role",
        "player": "%externals_player_name"
      }
    },
    {
      "required": ["%if_has_gun"],
      "exclude": ["%if_manual_aim"],
      "call": "player_key_binding",
      "arguments": {
        "id": "car_or_heli.select_next_opponent",
        "role": "%externals_role",
        "player": "%externals_player_name",
        "select_next_opponent": true
      }
    },
    {
      "call": "player_key_binding",
      "arguments": {
        "id": "car_or_heli.select_next_vehicle",
        "role": "%externals_role",
        "player": "%externals_player_name",
        "select_next_vehicle": true
      }
    },
    {
      "call": "player_key_binding",
      "arguments": {
        "id": "car_or_heli.reset_vehicle",
        "role": "%externals_role",
        "player": "%externals_player_name",
        "reset_vehicle": true
      }
    }
  ]
}
