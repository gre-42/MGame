{
  "declare_macro": "create_avatar_key_bindings",
  "content": [
    {
      "call": "avatar_controller_idle_binding",
      "arguments": {
        "player": "%externals_player_name",
        "node": "human_node$suffix"
      }
    },
    {
      "comment": {
        "call": "abs_key_binding",
        "arguments": {
          "player": "%player_name",
          "node": "human_node$suffix",
          "key": "LEFT_SHIFT",
          "gamepad_button": "B",
          "force": [0, 2000, 0],
          "position": [0, 0, 0]
        }
      }
    },
    {
      "call": "abs_key_binding",
      "arguments": {
        "id": "avatar.jump",
        "role": "%externals_role",
        "player": "%externals_player_name",
        "node": "human_node$suffix",
        "wants_to_jump": true
      }
    },
    {
      "call": "avatar_controller_key_binding",
      "arguments": {
        "id": "avatar.strafe_left",
        "role": "%externals_role",
        "player": "%externals_player_name",
        "node": "human_node$suffix",
        "surface_power": "inf",
        "legs_z": [-1, 0, 0]
      }
    },
    {
      "call": "avatar_controller_key_binding",
      "arguments": {
        "id": "avatar.strafe_right",
        "role": "%externals_role",
        "player": "%externals_player_name",
        "node": "human_node$suffix",
        "surface_power": "inf",
        "legs_z": [1, 0, 0]
      }
    },
    {
      "call": "avatar_controller_key_binding",
      "arguments": {
        "id": "avatar.rotate_left",
        "role": "%externals_role",
        "player": "%externals_player_name",
        "node": "human_node$suffix",
        "yaw": true,
        "press_factor": 0.1,
        "repeat_factor": 1,
        "angular_velocity": "inf",
        "speed_cursor": 0.1
      }
    },
    {
      "call": "avatar_controller_key_binding",
      "arguments": {
        "id": "avatar.rotate_right",
        "role": "%externals_role",
        "player": "%externals_player_name",
        "node": "human_node$suffix",
        "yaw": true,
        "press_factor": 0.1,
        "repeat_factor": 1,
        "angular_velocity": "-inf",
        "speed_cursor": -0.1
      }
    },
    {
      "call": "avatar_controller_key_binding",
      "arguments": {
        "id": "avatar.forward",
        "role": "%externals_role",
        "player": "%externals_player_name",
        "node": "human_node$suffix",
        "surface_power": "inf",
        "legs_z": [0, 0, -1]
      }
    },
    {
      "call": "avatar_controller_key_binding",
      "arguments": {
        "id": "avatar.backwards",
        "role": "%externals_role",
        "player": "%externals_player_name",
        "node": "human_node$suffix",
        "surface_power": "inf",
        "legs_z": [0, 0, 1]
      }
    },
    {
      "call": "avatar_controller_key_binding",
      "arguments": {
        "id": "avatar.rotate_up",
        "role": "%externals_role",
        "player": "%externals_player_name",
        "node": "human_node$suffix",
        "pitch": true,
        "press_factor": 0.1,
        "repeat_factor": 1,
        "angular_velocity": "inf",
        "speed_cursor": 0.1
      }
    },
    {
      "call": "avatar_controller_key_binding",
      "arguments": {
        "id": "avatar.rotate_down",
        "role": "%externals_role",
        "player": "%externals_player_name",
        "node": "human_node$suffix",
        "pitch": true,
        "press_factor": 0.1,
        "repeat_factor": 1,
        "angular_velocity": "-inf",
        "speed_cursor": -0.1
      }
    },
    {
      "call": "weapon_cycle_key_binding",
      "arguments": {
        "id": "avatar.next_weapon",
        "role": "%externals_role",
        "player": "%externals_player_name",
        "weapon_increment": 1
      }
    },
    {
      "call": "weapon_cycle_key_binding",
      "arguments": {
        "id": "avatar.previous_weapon",
        "role": "%externals_role",
        "player": "%externals_player_name",
        "weapon_increment": -1
      }
    },
    {
      "call": "gun_key_binding",
      "arguments": {
        "id": "avatar.shoot",
        "role": "%externals_role",
        "player": "%externals_player_name"
      }
    },
    {
      "call": "player_key_binding",
      "arguments": {
        "id": "avatar.select_next_vehicle",
        "role": "%externals_role",
        "player": "%externals_player_name",
        "select_next_vehicle": true
      }
    }
  ]
}
