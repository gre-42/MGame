{
  "declare_macro": "create_tank_key_bindings",
  "content": [
    {
      "required": "%if_manual_drive",
      "call": "car_controller_idle_binding",
      "arguments": {
        "player": "%player_name",
        "node": "car_node$suffix"
      }
    },
    {
      "required": "%if_manual_drive",
      "call": "car_controller_key_binding",
      "arguments": {
        "user_id": "%user_id",
        "id": "car_or_heli.steer_left",
        "seat": "%externals_seat",
        "player": "%player_name",
        "node": "car_node$suffix",
        "steer_left_amount": 1
      }
    },
    {
      "required": "%if_manual_drive",
      "call": "car_controller_key_binding",
      "arguments": {
        "user_id": "%user_id",
        "id": "car_or_heli.steer_right",
        "seat": "%externals_seat",
        "player": "%player_name",
        "node": "car_node$suffix",
        "steer_left_amount": -1
      }
    },
    {
      "comment": {
        "call": "abs_key_binding",
        "arguments": {
          "node": "car_node$suffix",
          "key": "%LEFT_SHIFT",
          "gamepad_button": "B",
          "force": [0, 20000, 0]
        }
      }
    },
    {
      "required": "%if_manual_drive",
      "call": "car_controller_key_binding",
      "arguments": {
        "user_id": "%user_id",
        "id": "car_or_tank.forward",
        "seat": "%externals_seat",
        "player": "%player_name",
        "node": "car_node$suffix",
        "surface_power": "inf"
      }
    },
    {
      "required": "%if_manual_drive",
      "call": "car_controller_key_binding",
      "arguments": {
        "user_id": "%user_id",
        "id": "car_or_tank.backwards",
        "seat": "%externals_seat",
        "player": "%player_name",
        "node": "car_node$suffix",
        "surface_power": "-inf"
      }
    },
    {
      "required": "%if_has_gun",
      "call": "rel_key_binding",
      "arguments": {
        "user_id": "%user_id",
        "id": "heli_or_tank.rotate_gun_left",
        "seat": "%externals_seat",
        "player": "%player_name",
        "node": "turret_node$suffix",
        "rotation_axis": [0, 1, 0],
        "angular_velocity": 1,
        "press_factor": 0.1,
        "repeat_factor": 1,
        "speed_cursor": 0.05
      }
    },
    {
      "required": "%if_has_gun",
      "call": "rel_key_binding",
      "arguments": {
        "user_id": "%user_id",
        "id": "heli_or_tank.rotate_gun_right",
        "seat": "%externals_seat",
        "player": "%player_name",
        "node": "turret_node$suffix",
        "rotation_axis": [0, 1, 0],
        "angular_velocity": -1,
        "press_factor": 0.1,
        "repeat_factor": 1,
        "speed_cursor": -0.05
      }
    },
    {
      "required": "%if_has_gun",
      "call": "rel_key_binding",
      "arguments": {
        "user_id": "%user_id",
        "id": "car_or_heli.rotate_gun_up",
        "seat": "%externals_seat",
        "player": "%player_name",
        "node": "turret_node$suffix",
        "rotation_axis": [1, 0, 0],
        "angular_velocity": 1,
        "press_factor": 0.1,
        "repeat_factor": 1,
        "speed_cursor": 0.05
      }
    },
    {
      "required": "%if_has_gun",
      "call": "rel_key_binding",
      "arguments": {
        "user_id": "%user_id",
        "id": "car_or_heli.rotate_gun_down",
        "seat": "%externals_seat",
        "player": "%player_name",
        "node": "turret_node$suffix",
        "rotation_axis": [1, 0, 0],
        "angular_velocity": -1,
        "press_factor": 0.1,
        "repeat_factor": 1,
        "speed_cursor": -0.05
      }
    },
    {
      "required": "%if_has_gun",
      "call": "gun_key_binding",
      "arguments": {
        "user_id": "%user_id",
        "id": "any.shoot",
        "seat": "%externals_seat",
        "player": "%player_name"
      }
    },
    {
      "required": "%if_has_gun",
      "exclude": ["%if_manual_aim"],
      "call": "player_key_binding",
      "arguments": {
        "user_id": "%user_id",
        "id": "any.select_next_opponent",
        "seat": "%externals_seat",
        "player": "%player_name",
        "select_next_opponent": true
      }
    },
    {
      "call": "player_key_binding",
      "arguments": {
        "user_id": "%user_id",
        "id": "car_heli_tank.select_next_vehicle",
        "seat": "%externals_seat",
        "player": "%player_name",
        "select_next_vehicle": true
      }
    },
    {
      "call": "player_key_binding",
      "arguments": {
        "user_id": "%user_id",
        "id": "car_or_heli.reset_vehicle",
        "seat": "%externals_seat",
        "player": "%player_name",
        "reset_vehicle": true
      }
    }
  ]
}
