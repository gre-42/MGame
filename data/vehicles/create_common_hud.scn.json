[
  {
    "declare_macro": "create_common_hud",
    "content": [
      {
        "required": ["%if_pc", "(%minimap_file != %null)"],
        "call": "minimap",
        "context": "primary_scene_$full_user_name",
        "arguments": {
          "player": "%player_name",
          "left": "minimap_widget_left",
          "right": "minimap_widget_right",
          "bottom": "minimap_widget_bottom",
          "top": "minimap_widget_top",
          "locator_size": "minimap_locator_size",
          "minimap": "%minimap_file",
          "locator": "textures/dot.png",
          "pointer_reference_length": 200,
          "pointer_scale": "%minimap_scale",
          "pointer_size": "%minimap_size",
          "pointer_offset": "%minimap_offset"
        }
      },
      {
        "required": ["%if_pc", "%if_damageable"],
        "call": "ui_background",
        "context": "primary_scene_$full_user_name",
        "arguments": {
          "z_order": 0,
          "player": "%player_name",
          "texture": "#health",
          "left": "health_icon_left",
          "right": "health_icon_right",
          "bottom": "health_icon_bottom",
          "top": "health_icon_top",
          "delay_load_policy": "no_delay",
          "focus_mask": "always"
        }
      },
      {
        "required": ["%if_pc", "%if_damageable"],
        "call": "visual_player_status",
        "context": "primary_scene_$full_user_name",
        "arguments": {
          "player": "%player_name",
          "format": "health",
          "charset": "%selected_language",
          "ttf_file": "fonts/RobotoMono-Bold.ttf",
          "left": "health_text_left",
          "right": "health_text_right",
          "bottom": "health_text_bottom",
          "top": "health_text_top",
          "font_color": "%ui_font_color",
          "font_height": "large",
          "line_distance": "large",
          "focus_mask": "always"
        }
      },
      {
        "required": ["%if_pc", "%if_has_weapon"],
        "call": "ui_background",
        "context": "primary_scene_$full_user_name",
        "arguments": {
          "z_order": 0,
          "player": "%player_name",
          "texture": "#ammunition",
          "left": "bullet_count_icon_left",
          "right": "bullet_count_icon_right",
          "bottom": "bullet_count_icon_bottom",
          "top": "bullet_count_icon_top",
          "delay_load_policy": "no_delay",
          "focus_mask": "always"
        }
      },
      {
        "required": ["%if_pc", "%if_has_weapon"],
        "call": "visual_player_bullet_count",
        "context": "primary_scene_$full_user_name",
        "arguments": {
          "z_order": 0,
          "player": "%player_name",
          "left": "bullet_count_text_left",
          "right": "bullet_count_text_right",
          "bottom": "bullet_count_text_bottom",
          "top": "bullet_count_text_top",
          "charset": "%selected_language",
          "ttf_file": "fonts/RobotoMono-Bold.ttf",
          "font_color": [1, 1, 1],
          "font_height": "large",
          "line_distance": "large",
          "focus_mask": "always"
        }
      }
    ]
  },
  {
    "declare_macro": "create_position_hud",
    "content": {
      "required": ["%if_pc", "%if_devel"],
      "call": "visual_player_status",
      "context": "primary_scene_$full_user_name",
      "arguments": {
        "format": "position|speed|diameter|energy",
        "charset": "%selected_language",
        "ttf_file": "fonts/RobotoMono-Bold.ttf",
        "left": "player_status_left",
        "right": "player_status_right",
        "bottom": "player_status_bottom",
        "top": "player_status_top",
        "font_color": "%ui_font_color",
        "font_height": "normal",
        "line_distance": "normal",
        "player": "%player_name",
        "focus_mask": "always"
      }
    }
  },
  {
    "declare_macro": "create_speed_hud",
    "content": {
      "required": "%if_pc",
      "call": "visual_player_status",
      "context": "primary_scene_$full_user_name",
      "arguments": {
        "player": "%player_name",
        "format": "speed",
        "charset": "%selected_language",
        "ttf_file": "fonts/RobotoMono-Bold.ttf",
        "left": "player_speed_left",
        "right": "player_speed_right",
        "bottom": "player_speed_bottom",
        "top": "player_speed_top",
        "font_color": "%scene_font_color",
        "font_height": "normal",
        "line_distance": "normal",
        "circular": {
          "pointer": "textures/pointer.png",
          "tick_radius": "tick_radius",
          "pointer_width": "pointer_width",
          "pointer_length": "pointer_length",
          "minimum_value": 0,
          "maximum_value": 250,
          "blank_angle": 60,
          "ticks": ["'0'", "'30'", "'60'", "'90'", "'120'", "'150'", "'180'", "'210'", "'240'"]
        },
        "focus_mask": "always"
      }
    }
  },
  {
    "declare_macro": "create_rpm_hud",
    "content": [
      {
        "call": "visual_player_status",
        "context": "primary_scene_$full_user_name",
        "arguments": {
          "player": "%player_name",
          "child": ["engines", "%engine_name"],
          "format": "abs_angular_velocity",
          "charset": "%selected_language",
          "ttf_file": "fonts/RobotoMono-Bold.ttf",
          "left": "player_engine_rpm_left",
          "right": "player_engine_rpm_right",
          "bottom": "player_engine_rpm_bottom",
          "top": "player_engine_rpm_top",
          "font_color": "%scene_font_color",
          "font_height": "normal",
          "line_distance": "normal",
          "circular": {
            "pointer": "textures/pointer.png",
            "tick_radius": "tick_radius",
            "pointer_width": "pointer_width",
            "pointer_length": "pointer_length",
            "minimum_value": 0,
            "maximum_value": 8400,
            "blank_angle": 60,
            "ticks": ["'0'", "'1200'", "'2400'", "'3600'", "'4800'", "'6000'", "'7200'", "'8400'"]
          },
          "focus_mask": "always"
        }
      }
    ]
  }
]
