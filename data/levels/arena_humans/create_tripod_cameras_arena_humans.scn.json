{
  "declare_macro": "create_tripod_cameras",
  "content": [
    {
      "playback": "create_tripod_camera",
      "arguments": {
        "node_name": "tripod_node_$user_name",
        "position": [0, 0, 0],
        "rotation": [0, 0, 0]
      }
    },
    {
      "call": "set_camera_cycle",
      "context": "primary_scene_$full_user_name",
      "arguments": {
        "name": "tripod",
        "cameras": ["tripod_node_$user_name"]
      }
    }
  ]
}
